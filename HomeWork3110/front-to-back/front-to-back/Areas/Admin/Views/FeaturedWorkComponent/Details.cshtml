@using front_to_back.Areas.Admin.ViewModels.FeaturedWorkComponent;
@model FeaturedWorkComponentDetailsViewModel
<div class="col-lg-12 grid-margin ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Featured Work Component Details</h4>
            <h3>Photos:</h3>
            <div>
                
                @foreach (var photo in Model.FeatureWorkComponentPhotos)
                {
                   

                    <span>Order:@photo.Order</span>
                    <td><img  style="width:200px;height:200px; border-radius:50%" src="~/assets/img/@photo.Name" /></td>
                    <br />
                    <br />
                }

            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Id</td>
                            <td>@Model.Title</td>
                            <td>@Html.Raw(Model.Description)</td>
                        </tr>
                    </tbody>
                </table>
                <a asp-action="index" asp-controller="featuredworkcomponent" class="btn btn-info">Cancel</a>
            </div>
        </div>
    </div>
</div>