@using front_to_back.Areas.Admin.ViewModels.CategoryComponent
@model CategoryComponentUpdateViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
             <div class="col-md-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  
                  <p class="card-description">
                    UpdATE Category Component 
                  </p>
                  <form enctype="multipart/form-data" method="post" asp-action="update" asp-controller="categorycomponent" asp-area="admin" class="forms-sample">
                    
                      <input type="hidden" asp-for="FilePath" />
                      <div class="form-group">
                      <label asp-for="Title">Title</label>
                      <input  class="form-control" asp-for="Title">
                      <span asp-validation-for="Title"></span>
                    </div>
                     <div class="form-group">
                      <label asp-for="Description"></label>
                      <textarea class="form-control" asp-for="Description"></textarea>
                      <span asp-validation-for="Description"></span>
                    </div>
                     <div class="form-group">
                      <label asp-for="Photo">Photo</label>
                      <img style="width:200px; height:200px; border-radius:50%" src="~/assets/img/@Model.FilePath" />
                      <input  class="form-control" asp-for="Photo">
                      <span asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="CategoryId"></label>
                      <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories"></select>
                      <span asp-validation-for="CategoryId"></span>
                    </div>
                     

                   
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                     <a class="btn btn-danger" asp-action="index" asp-controller="categorycomponent" asp-area="admin"> Cancel</a>
                  </form>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>
    <script>
                        ClassicEditor
                                .create( document.querySelector( '#Description' ) )
                                .then( editor => {
                                        console.log( editor );
                                } )
                                .catch( error => {
                                        console.error( error );
                                } );
                </script>
}

