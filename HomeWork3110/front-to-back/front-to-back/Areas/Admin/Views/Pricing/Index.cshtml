@using front_to_back.Areas.Admin.ViewModels
@model PricingIndexViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Categories</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="pricing" asp-area="admin">CREATE PircingComponent</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Cost</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pricingComponent in Model.PricingComponents)
                                    {
                                        <tr>
                                            <td>@pricingComponent.Id</td>
                                            <td>@pricingComponent.Title</td>
                                            <td>@pricingComponent.Description</td>
                                            <td>@pricingComponent.Cost</td>

                                            <td>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="pricing" asp-area="admin" asp-route-id="@pricingComponent.Id">Update</a>
                                                 <a class="btn btn-danger" asp-action="delete" asp-controller="pricing" asp-area="admin" asp-route-id="@pricingComponent.Id">Delete</a>
                                                 <a class="btn btn-info" asp-action="details" asp-controller="pricing" asp-area="admin" asp-route-id="@pricingComponent.Id">Details</a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>