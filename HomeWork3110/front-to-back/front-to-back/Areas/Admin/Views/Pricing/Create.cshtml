@using front_to_back.Models
@model PricingComponent
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
             <div class="col-md-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  
                  <p class="card-description">
                    Create pricing
                  </p>
                  <form method="post" asp-action="create" asp-controller="pricing" asp-area="admin" class="forms-sample">
                    <div class="form-group">
                      <label asp-for="Title">Title</label>
                      <input  class="form-control" asp-for="Title">
                      <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Description">Description</label>
                      <input  class="form-control" asp-for="Description">
                      <span asp-validation-for="Description"></span>
                    </div>
                     <div class="form-group">
                      <label asp-for="Cost">Cost</label>
                      <input  class="form-control" asp-for="Cost">
                      <span asp-validation-for="Cost"></span>
                    </div>
                   
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button >
                        <a class="btn btn-light" asp-action="index" asp-controller="pricing" asp-area="admin">Cancel</a>
                    </button>
                  </form>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
