@using front_to_back.Areas.Admin.ViewModels
@model RecentWorkIndexViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Categories</h4>
                        <a class="btn btn-main" asp-action="create" asp-controller="recentwork" asp-area="admin">CREATE RecentWork</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Text</th>
                                        <th>FilePath</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model.RecentWorkComponents)
                                    {
                                        <tr>
                                            <td>@category.Id</td>
                                            <td>@category.Title</td>
                                            <td>@category.Text</td>
                                            <td>@category.FilePath</td>
                                            <td >

                                                <a class="btn btn-primary " asp-action="update" asp-controller="recentwork" asp-area="admin" asp-route-id=@category.Id>Update</a>
                                                <a class="btn btn-primary btn-danger " asp-action="delete" asp-controller="recentwork" asp-area="admin" asp-route-id=@category.Id>Delete</a>
                                                 <a class="btn btn-primary btn-details " asp-action="details" asp-controller="recentwork" asp-area="admin" asp-route-id=@category.Id>Details</a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>