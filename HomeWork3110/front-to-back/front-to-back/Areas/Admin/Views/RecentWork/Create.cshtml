@using front_to_back.Models
@model RecentWorkComponent
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
             <div class="col-md-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  
                  <p class="card-description">
                    Create RECENT WOrk Component
                  </p>
                  <form method="post" asp-action="create" asp-controller="recentwork" asp-area="admin" class="forms-sample">
                    <div class="form-group">
                      <label asp-for="Title">Title</label>
                      <input  class="form-control" asp-for="Title">
                      <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Text">Text</label>
                      <input  class="form-control" asp-for="Text">
                      <span asp-validation-for="Text"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="FilePath">FilePath</label>
                      <input  class="form-control" asp-for="FilePath">
                      <span asp-validation-for="FilePath"></span>
                    </div>
                   
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                  </form>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>

