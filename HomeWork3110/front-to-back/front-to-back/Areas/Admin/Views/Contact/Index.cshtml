
@using front_to_back.Areas.Admin.ViewModels.Contact
@model ContactIndexViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Contact Banner</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="contact" asp-area="admin">CREATE Contact Banner</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Photo</th>
                                        <th>Title</th>
                                        <th>Title2</th>
                                        <th>Information</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contactBanner in Model.ContactBannerHeroe)
                                    {
                                        
                                        <tr>
                                            <td>@contactBanner.Id</td>
                                            <td> <img src="~/assets/img/@contactBanner.PhotoPath"></td>
                                            <td>@contactBanner.Title</td>
                                            <td>@contactBanner.Title2</td>
                                            <td style="width:200px">@contactBanner.Information</td>
                                            
                                            <td>

                                                <a class="btn btn-primary " asp-action="update" asp-controller="contact" asp-area="admin" asp-route-id=@contactBanner.Id>Update</a>
                                                <a class="btn btn-primary btn-danger " asp-action="delete" asp-controller="contact" asp-area="admin" asp-route-id=@contactBanner.Id>Delete</a>
                                                <a class="btn btn-primary btn-details " asp-action="details" asp-controller="contact" asp-area="admin" asp-route-id=@contactBanner.Id>Details</a>
                                            </td>
                                        </tr>
                                    
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
